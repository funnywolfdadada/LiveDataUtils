<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/display_layout"
        android:background="#4000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/action_layout"
        android:layout_width="match_parent"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/action_layout"
        android:background="#4000"
        app:layout_constraintTop_toBottomOf="@id/display_layout"
        app:layout_constraintBottom_toTopOf="@id/list_layout"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/list_layout"
        android:background="#4000"
        app:layout_constraintTop_toBottomOf="@id/action_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>